    <div id="MarcoRegistro" class="col-lg-12">
        <div id="InfoPersona" class="col-lg-12" align="center" style="display: none; margin-top:10px;">
            <h4 style="text-align:left;">Formulario del información personal</h4>
            <form>
                <div class="form-group">
                    <label for="Cedula">Cédula</label>
                    <input type="text" class="form-control" id="Cedula">
                </div>
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="Nombre">
                </div>
                <div class="form-group">
                    <label for="Apellido1">Apellido 1</label>
                    <input type="text" class="form-control" id="Apellido1">
                </div>
                <div class="form-group">
                    <label for="Apellido2">Apellido 2</label>
                    <input type="text" class="form-control" id="Apellido2">
                </div>
                <div class="form-group">
                    <label for="EstadoPersona">Estado:</label>
                    <input class="form-check-input" type="checkbox" id="EstadoPersona">
                    <label class="form-check-label" for="EstadoPersona">Activo</label>
                </div>
                <button type="button" class="btn btn-danger" onclick="FinalizarRegistro()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="RegistrarPersona()">Continuar</button>
            </form>
        </div>

        <div id="InfoTelefono" style="display: block; margin-top:10px; display:none;">
            <div id="I" class="col-lg-12">
                <h4>Formulario de información de contacto</h4>
                <form>
                    <div class="form-group" align="center">
                        <label for="NumeroTel">Teléfono</label>
                        <input type="text" class="form-control" id="NumeroTel">
                    </div>
                    <div class="form-group" align="center">
                        <label for="TipoTelefono">Tipo teléfono</label>
                        <select class="form-control" id="TipoTelefono">
                            <option>Default</option>
                        </select>
                    </div>
                    <div class="form-group" align="center">
                        <label for="EstadoTelefono">Estado</label>
                        <input class="form-check-input" type="checkbox" id="EstadoTelefono">
                        <label class="form-check-label" for="EstadoTelefono">Activo</label>
                    </div>
                    <div class="form-group" align="center">
                        <button type="button" class="btn btn-success" onclick="RegistrarTelefono()">Agregar</button>
                        <button type="button" class="btn btn-default" onclick="ContinuarTelefono()">Continuar</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-12">
                <h4 style="margin-top:10px;">Lista de contactos</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Teléfonon</th>
                            <th scope="col">Tipo teléfono</th>
                            <th scope="col" colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1</th>
                            <td>88888888</td>
                            <td>Hogar</td>
                            <td><button type="button" class="btn btn-default" onclick="Validar()">Modificar</button></td>
                            <td><button type="button" class="btn btn-danger" onclick="Validar()">Eliminar</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="InfoAsistente" class="col-lg-12" style="display: none; margin-top:10px;">
            <h4>Formulario de registro de asistentes</h4>
            <form>
                <div class="form-group" align="center">
                    <label for="TipoAsistente">Tipo asistente</label>
                    <select class="form-control" id="TipoAsistente">
                        <option>Default</option>
                    </select>
                </div>
                <div class="form-group" align="center">
                    <label for="FechIngreso">Ingreso</label>
                    <input class="form-control" type="date" id="FechIngreso" name="trip-start"
                           value="2018-07-22"
                           min="2018-01-01" max="2018-12-31">
                </div>
                <div class="form-group" align="center">
                    <label for="FechEntrada">Entrada</label>
                    <input class="form-control" type="date" id="FechEntrada" name="trip-start"
                           value="2018-07-22"
                           min="2018-01-01" max="2018-12-31">
                </div>
                <div class="form-group" align="center">
                    <label for="FechSalida">Salida</label>
                    <input class="form-control" type="date" id="FechSalida" name="trip-start"
                           value="2018-07-22"
                           min="2018-01-01" max="2018-12-31">
                </div>
                <div class="form-group" align="center">
                    <label for="EstadoAsistente">Estado: </label>
                    <input class="form-check-input" type="checkbox" id="EstadoAsistente">
                    <label class="form-check-label" for="EstadoAsistente">Activo</label>
                </div>
                <div class="form-group" align="center">
                    <button type="button" class="btn btn-success" onclick="GuardarAsistente()">Guardar</button>
                </div>
            </form>
        </div>

    </div>
</div>


