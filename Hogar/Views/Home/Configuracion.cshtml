
@{
    ViewBag.Title = "Configuracion";
}

<h3 id="TituloConfig">Configuración del sistema</h3>
<hr />

<div class="col-lg-12">
    <div id="Principal">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Usuarios</th>
                    <td>Permite agregar y modificar usuarios al sistema.</td>
                    <td><button type="submit" class="btn btn-success" onclick="MostrarConfigUsuario()">Modificar</button></td>
                </tr>
                <tr>
                    <th>Catálogo Rol</th>
                    <td>Permite agregar y modificar el catálogo de roles.</td>
                    <td><button type="submit" class="btn btn-success" onclick="MostrarConfigRol()">Modificar</button></td>
                </tr>
                <tr>
                    <th>Catálogo Articulo</th>
                    <td>Permite agregar y modificar el catálogo de articulos.</td>
                    <td><button type="submit" class="btn btn-success" onclick="MostrarConfigArticulo()">Modificar</button></td>
                </tr>
                <tr>
                    <th>Catálogo Teléfono</th>
                    <td>Permite agregar y modificar el catálogo de telefonos.</td>
                    <td><button type="submit" class="btn btn-success" onclick="MostrarConfigTelefono()">Modificar</button></td>
                </tr>
                <tr>
                    <th>Catálogo Parentesco</th>
                    <td>Permite agregar y modificar el catálogo de parenteso.</td>
                    <td><button type="submit" class="btn btn-success" onclick="MostrarConfigParentesco()">Modificar</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-lg-6" align="left">
        <button id="btnAtras" type="button" class="btn btn-default" onclick="OcultarFormularios()" style="margin:10px; display:none;">Volver</button>
    </div>
    <div class="col-lg-6" align="right">
        <button id="btnCrear" type="button" class="btn btn-success" onclick="AgregarPersona()" style="margin:10px; display:none;">Agregar usuario</button>
    </div>

    <div id="EdicionGeneral" style="display: none;" class="col-lg-12">
        <div class="col-lg-12">
            <h4 style="margin-top:25px;">Agregar un registro</h4>
            <form class="form-inline" style="margin-bottom:5px;">
                <div class="col-lg-4" align="center">
                    <div class="form-group">
                        <label for="DescripcionGeneral">Descripcion: </label>
                        <input type="text" class="form-control" id="DescripcionGeneral">
                    </div>
                </div>
                <div class="col-lg-4" align="center">
                    <div class="form-group">
                        <label for="EstadoGeneral">Estado: </label>
                        <input class="form-check-input" type="checkbox" id="EstadoGeneral">
                        <label class="form-check-label" for="EstadoGeneral">Activo</label>
                    </div>
                </div>
                <div class="col-lg-4" align="center">
                    <button type="button" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
        <div class="col-lg-12">
            <h4 style="margin-top:25px;">Lista de registros</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Descripción</th>
                        <th scope="col" colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>1</th>
                        <td>Descripcion del catálogo</td>
                        <td><button type="submit" class="btn btn-default" onclick="Validar()">Modificar</button></td>
                        <td><button type="submit" class="btn btn-danger" onclick="Validar()">Eliminar</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div id="EdicionUsuario" style="display: none;" class="col-lg-12">
        <div id="TablaUsuarios">
            <h4 style="margin-top:20px; text-align:left;">Lista de usuarios</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Rol</th>
                        <th scope="col" colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>1</th>
                        <td>Usuario</td>
                        <td>Jane Doe</td>
                        <td>Admin</td>
                        <td><button type="submit" class="btn btn-default" onclick="Validar()">Modificar</button></td>
                        <td><button type="submit" class="btn btn-danger" onclick="Validar()">Eliminar</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="InfoPersona" class="col-lg-12" align="center" style="display: none;">
            <h4 style="margin-top:20px; text-align:left;">Información personal</h4>
            <form>
                <div class="form-group">
                    <label for="Cedula">Cédula</label>
                    <input type="text" class="form-control" id="Cedula">
                </div>
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="Nombre">
                </div>
                <div class="form-group">
                    <label for="Apellido1">Apellido 1</label>
                    <input type="text" class="form-control" id="Apellido1">
                </div>
                <div class="form-group">
                    <label for="Apellido2">Apellido 2</label>
                    <input type="text" class="form-control" id="Apellido2">
                </div>
                <div class="form-group">
                    <label for="Estado">Estado:</label>
                    <input class="form-check-input" type="checkbox" id="Estado">
                    <label class="form-check-label" for="Estado">Activo</label>
                </div>
                <button type="button" class="btn btn-danger" onclick="FinalizarRegistroUsuario()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="AgregarTelefono()">Guardar y continuar</button>
            </form>
        </div>
        <div id="InfoTelefono" style="display: none;">
            <div class="col-lg-12">
                <h4 style="margin-top:20px;">Información de contacto</h4>
                <form class="form-inline">
                    <div class="col-lg-4" align="center">
                        <div class="form-group mb-2">
                            <label for="NumeroTel">Teléfono</label>
                            <input type="text" class="form-control" id="NumeroTel">
                        </div>
                    </div>
                    <div class="col-lg-3" align="center">
                        <div class="form-group mb-2">
                            <label for="TipoTelefono">Tipo teléfono</label>
                            <select class="form-control" id="TipoTelefono">
                                <option>Default</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2" align="center">
                        <div class="form-group mb-2">
                            <label for="EstadoTelefono">Estado</label>
                            <input class="form-check-input" type="checkbox" id="EstadoTelefono">
                            <label class="form-check-label" for="EstadoTelefono">Activo</label>
                        </div>
                    </div>                    
                    <div class="col-lg-3" align="center">
                        <button type="button" class="btn btn-success" onclick="">Agregar</button>
                        <button type="button" class="btn btn-default" onclick="AgregarUsuario()">Continuar</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-12">
                <h4 style="margin-top:20px;">Lista de registros</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Teléfonon</th>
                            <th scope="col">Tipo teléfono</th>
                            <th scope="col" colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1</th>
                            <td>88888888</td>
                            <td>Hogar</td>
                            <td><button type="submit" class="btn btn-default" onclick="Validar()">Modificar</button></td>
                            <td><button type="submit" class="btn btn-danger" onclick="Validar()">Eliminar</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div id="InfoUsuario" class="col-lg-12" align="center" style="display: none;">
            <h4 style="margin-top:20px; text-align:left;">Información del usuario</h4>
            <form>
                <div class="form-group">
                    <label for="Usuario">Usuario</label>
                    <input type="text" class="form-control" id="Usuario">
                </div>
                <div class="form-group">
                    <label for="Contrasena">Contraseña</label>
                    <input type="password" class="form-control" id="Contrasena">
                </div>
                <div class="form-group">
                    <label for="ContrasenaRepita">Repita la contraseña</label>
                    <input type="password" class="form-control" id="ContrasenaRepita">
                </div>
                <div class="form-group">
                    <label for="Rol">Rol</label>
                    <select class="form-control" id="Rol">
                        <option>Default</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="EstadoUsuario">Estado</label>
                    <input class="form-check-input" type="checkbox" id="EstadoUsuario">
                    <label class="form-check-label" for="EstadoUsuario">Activo</label>
                </div>
                <button type="button" class="btn btn-success" onclick="FinalizarRegistroUsuario()">Guardar y finalizar</button>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/Funciones/Configuracion.js"></script>