
@{
    ViewBag.Title = "Residencial Otoya";
}

<script src="~/Scripts/Funciones/IniciarSesion.js"></script>
<script src="~/Scripts/Funciones/Compartido.js"></script>

<div class="container">
    <div id="Formulario" class="col-lg-12" align="center">
        <div class="col-lg-12">
            <img src="~/Images/logo.jpg" alt="Alternate Text" style="padding:20px; width: 80%;  height: auto;" />
        </div>
        <div class="col-lg-12" style="padding:20px;">
            <form>
                <div class="form-group">
                    <label for="Usuario">Usuario</label>
                    <input type="text" class="form-control" id="Usuario" maxlength="15">
                </div>
                <div class="form-group">
                    <label for="Contrasena">Contraseña:</label>
                    <input type="password" class="form-control" id="Contrasena" autocomplete="off" maxlength="15">
                </div>
                <button id="btnIngresar" type="button" class="btn btn-success" onclick="Validar()">Ingresar</button>
                <img id="loading" src="~/Images/loading.gif" alt="Cargando" style="width:50px; height:50px; display:none;" />
            </form>            
        </div>                
    </div>
</div>

<div class="modal fade" id="MensajeAlerta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Atención</h5>
            </div>
            <div class="modal-body">
                <p id="MensajeModal"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>
