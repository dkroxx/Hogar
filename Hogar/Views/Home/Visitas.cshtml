
@{
    ViewBag.Title = "Visitas";
}

<h3  id="TituloConfig">Visitas</h3>
<hr />

<div class="col-lg-12">
    <div class="col-lg-12" align="left">
        <button id="btnCrear" type="button" class="btn btn-success" onclick="AgendarVisita()">Agendar visita</button>
        <button id="btnAtras" type="button" class="btn btn-default" onclick="RegistrarVisita()" style="display:none;">Volver</button>
    </div>

    <div id="Visitas" class="col-lg-12"  style="margin-top:10px;">
        <h4>Visitas agendadas</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Residente</th>
                    <th scope="col">Visitante</th>
                    <th scope="col">Parentesco</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>1</th>
                    <td>Marco Lopez</td>
                    <td>Gonzalo Madril</td>
                    <td>Amigo</td>
                    <td>10-08-2020</td>
                    <td><button type="submit" class="btn btn-danger" onclick="">Eliminar</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="InfoVisita" class="col-lg-12" align="center" style="display: none;">
        <h4 style="margin-top:20px; text-align:left;">Agendar visitar</h4>
        <form>
            <div class="form-group">
                <label for="Residente">Residente</label>
                <select class="form-control" id="Residente">
                    <option>Default</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Visitante">Visitante</label>
                <select class="form-control" id="Visitante">
                    <option>Default</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Fecha">Fecha</label>
                <input class="form-control" type="date" id="start" name="trip-start"
                       value="2018-07-22"
                       min="2018-01-01" max="2018-12-31">
            </div>
            <button type="button" class="btn btn-success" onclick="">Agendar</button>
        </form>
    </div>
</div>

<script src="~/Scripts/Funciones/Visitas.js"></script>