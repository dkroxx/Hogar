
@{
    ViewBag.Title = "Visitas";
}

<h3 id="TituloConfig">Visitas</h3>
<hr />

<div class="col-lg-12">
    <div class="col-lg-12" align="left">
        <button id="btnCrear" type="button" class="btn btn-success" onclick="AgendarVisita()">Agendar visita</button>
        <button id="btnAtras" type="button" class="btn btn-default" onclick="RegistrarVisita()" style="display:none;">Volver</button>
    </div>

    <div id="Visitas" class="col-lg-12" style="margin-top:10px;">
        <h4>Visitas agendadas</h4>

        <table id="TablaVisitas" class="display">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Residente</th>
                    <th scope="col">Visitante</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>

    <div id="InfoVisita" class="col-lg-12" align="center" style="display: none;">
        <h4 style="margin-top:20px; text-align:left;">Agendar visitar</h4>
        <form>
            <div class="form-group">
                <label for="Residente">Residente</label>
                <select class="form-control" id="cmbResidente" onchange="CargarParientes()">
                    <option>Seleccione</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Visitante">Visitante</label>
                <select class="form-control" id="cmbVisitante">
                    <option>Seleccione</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Fecha">Fecha</label>
                <input class="form-control" type="date" id="Fecha" name="trip-start"
                       value="2020-08-02"
                       min="1990-12-31" max="2999-12-31">
            </div>
            <div class="form-group">
                <label for="Fecha">Fecha</label>
                <input class="form-control" type="time" id="Hora" name="trip-start"
                       value="08:00"
                       min="07:00" max="18:00" >
            </div>
            <button type="button" class="btn btn-success" onclick="CrearVisita()">Agendar</button>
        </form>
    </div>
</div>

<div class="modal fade" id="MensajeAlerta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Atención</h5>
            </div>
            <div class="modal-body">
                <p id="MensajeModal"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Cargando" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body" align="center">
                <img src="~/Images/loading.gif" alt="Cargando" style="width:100px; height:100px;" />
                <p id="MensajeModal">Procesando...</p>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Funciones/Visitas.js"></script>