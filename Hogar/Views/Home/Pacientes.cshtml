
@{
    ViewBag.Title = "Residentes - Residencial Otoya";
}

<h3 id="TituloConfig">Residentes / Lista de residentes</h3>
<hr />

<ul class="nav nav-tabs">
    <li id="tbPacientes" onclick="clickPacientes()" class="active"><a>Residentes</a></li>
    <li id="tbParientes" onclick="clickParientes()"><a>Parientes</a></li>
    <li id="tbAsociar" onclick="clickAsociar()"><a>Relacionar residentes</a></li>
</ul>

<div class="col-lg-12">
    <div id="MarcoPacientes" class="col-lg-12">
        <div id="Principal">
            <div class="col-lg-12" align="left">
                <button id="btnCrearResidente" type="button" class="btn btn-success" onclick="AgregarResidente(1)" style="margin-top:25px;">Agregar residente</button>
            </div>
            <div id="tblPaciente" class="col-lg-12" style="margin-top:10px;">
                <h4>Residentes registrados</h4>
                <table id="TablaPaciente" class="display">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombre completo</th>
                            <th scope="col">Nacimiento</th>
                            <th scope="col">Ingreso</th>
                            <th scope="col">Acciones</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        
        <div id="Detalles" style="display: none;">
            <div class="col-lg-12" align="left">
                <button type="button" class="btn btn-default" onclick="RecargarPagina()" style="margin-top:25px;">Volver</button>
            </div>
            <div class="col-lg-12" align="center">
                <h4>Informacion personal</h4>
                <div class="form-group">
                    <label for="detCedula">Cédula</label>
                    <input type="text" class="form-control" id="detCedula" maxlength="15" disabled>
                </div>
                <div class="form-group">
                    <label for="detNombre">Nombre completo</label>
                    <input type="text" class="form-control" id="detNombre" maxlength="15" disabled>
                </div>
                <div class="form-group">
                    <label for="detNacimiento">Nacimiento</label>
                    <input type="text" class="form-control" id="detNacimiento" maxlength="15" disabled>
                </div>
                <div class="form-group">
                    <label for="detIngreso">Ingreso</label>
                    <input type="text" class="form-control" id="detIngreso" maxlength="15" disabled>
                </div>
            </div>

            <div class="col-lg-12" style="margin-top:20px;">
                <h4>Teléfonos registrados</h4>
                <table id="TablaDetTelefono" class="display">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-lg-12" style="margin-top:20px;">
                <h4>Articulos registrados</h4>
                <table id="TablaDetArticulos" class="display">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>

    </div>

    <div id="MarcoParientes" class="col-lg-12" style="display:none;">
        <div class="col-lg-12" align="left">
            <button id="btnCrearPariente" type="button" class="btn btn-success" onclick="AgregarPariente(2)" style="margin-top:25px;">Agregar pariente</button>
        </div>
        <div id="tblPariente" class="col-lg-12" style="margin-top:10px;">
            <h4>Parientes registrados</h4>
            <table id="TablaParientes" class="display">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Nombre completo</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div id="MarcoAsignar" class="col-lg-12" style="display:none;">

        <div id="tblAsignar" class="col-lg-12" style="margin-top:10px;">
            <h4>Relacionar Residente con Pariente</h4>
            <div class="col-lg-12">

                <form>
                    <div class="col-lg-4">
                        <div class="form-group" align="center">
                            <label for="cmbResidente">Residente</label>
                            <select class="form-control" id="cmbResidente">
                                <option>Seleccione</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group" align="center">
                            <label for="cmbParentesco">Parentesco</label>
                            <select class="form-control" id="cmbParentesco">
                                <option>Seleccione</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group" align="center">
                            <label for="cmbPariente">Pariente</label>
                            <select class="form-control" id="cmbPariente">
                                <option>Seleccione</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12" align="right">
                        <button type="button" class="btn btn-success" onclick="GuardarRelacion()">Relacionar</button>
                    </div>                    
                </form>
            </div>
        </div>
    </div>

    <div id="MarcoRegistro">

        <div id="InfoPersona" class="col-lg-12" align="center" style="display: none; margin-top:10px;">
            <h4 style="text-align:left;">Formulario del información personal</h4>
            <form>
                <div class="form-group">
                    <label for="Cedula">Cédula</label>
                    <input type="number" class="form-control" id="Cedula" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==15) return false;">
                </div>
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="Nombre" maxlength="15">
                </div>
                <div class="form-group">
                    <label for="Apellido1">Apellido 1</label>
                    <input type="text" class="form-control" id="Apellido1" maxlength="15">
                </div>
                <div class="form-group">
                    <label for="Apellido2">Apellido 2</label>
                    <input type="text" class="form-control" id="Apellido2" maxlength="15">
                </div>
                <div class="form-group" style="display: none;">
                    <label for="Estado">Estado:</label>
                    <input class="form-check-input" type="checkbox" id="EstadoPersona">
                    <label class="form-check-label" for="EstadoPersona">Activo</label>
                </div>
                <button type="button" class="btn btn-danger" onclick="RecargarPagina()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="AgregarNuevaPersona()">Continuar</button>
            </form>
        </div>

        <div id="InfoTelefono" style="display: none; margin-top:10px;">
            <div id="I" class="col-lg-12">
                <h4>Formulario de información de contacto</h4>
                <form>
                    <div class="form-group" align="center">
                        <label for="NumeroTel">Teléfono</label>
                        <input type="number" class="form-control" id="NumeroTel" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==8) return false;">
                    </div>
                    <div class="form-group" align="center">
                        <label for="TipoTelefono">Tipo teléfono</label>
                        <select class="form-control" id="TipoTelefono">
                            <option>Default</option>
                        </select>
                    </div>
                    <div class="form-group" align="center" style="display: none;">
                        <label for="EstadoTelefono">Estado</label>
                        <input class="form-check-input" type="checkbox" id="EstadoTelefono">
                        <label class="form-check-label" for="EstadoTelefono">Activo</label>
                    </div>
                    <div class="form-group" align="center">
                        <button type="button" class="btn btn-success" onclick="AgregarNuevoTelefono()">Agregar</button>
                        <button type="button" class="btn btn-default" onclick="ContinuarTelefono()">Continuar</button>
                    </div>
                </form>
            </div>            
        </div>

        <div id="InfoExpediente" class="col-lg-12" style="display: none; margin-top:10px;">
            <form>
                <h4 style="text-align:left;">Formulario del expediente general</h4>
                <div class="form-group" align="center">
                    <label for="FechaNac">Fecha de nacimiento</label>
                    <input class="form-control" type="date" id="FechaNac" name="trip-start"
                           value="2018-07-22"
                           min="1990-01-01" max="2999-12-31">
                </div>
                <div class="form-group" align="center">
                    <label for="FechaIng">Fecha de ingreso</label>
                    <input class="form-control" type="date" id="FechaIng" name="trip-start"
                           value="2018-07-22"
                           min="1990-01-01" max="2999-12-31">
                </div>
                <div class="form-group" align="center" style="display: none;">
                    <label for="EstadoExp">Estado</label>
                    <input class="form-check-input" type="checkbox" id="EstadoExp">
                    <label class="form-check-label" for="EstadoExp">Activo</label>
                </div>
                <div align="center">
                    <button type="button" class="btn btn-success" onclick="GuardarResidenteExpediente()">Continuar</button>
                </div>
            </form>
        </div>

        <div id="InfoArticulo" style="display: none; margin-top:10px;">
            <div class="col-lg-12">
                <h4>Formulario de registro de articulos</h4>
                <form>
                    <div class="form-group" align="center">
                        <label for="ArtDescripcion">Descripción</label>
                        <input type="text" class="form-control" id="ArtDescripcion" maxlength="15">
                    </div>
                    <div class="form-group" align="center">
                        <label for="Cantidad">Cantidad</label>
                        <input type="number" class="form-control" id="Cantidad" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==4) return false;">
                    </div>
                    <div class="form-group" align="center">
                        <label for="TipoArticulo">Tipo articulo</label>
                        <select class="form-control" id="TipoArticulo">
                            <option>Default</option>
                        </select>
                    </div>
                    <div class="form-group" align="center" style="display: none;">
                        <label for="EstadoArticulo">Estado:</label>
                        <input class="form-check-input" type="checkbox" id="EstadoArticulo">
                        <label class="form-check-label" for="EstadoArticulo">Activo</label>
                    </div>
                    <div class="form-group" align="center">
                        <button type="button" class="btn btn-success" onclick="GuardarArticulo()">Guardar</button>
                        <button type="button" class="btn btn-default" onclick="RecargarPagina()">Continuar</button>
                    </div>
                </form>
            </div>
        </div>

        <div id="InfoVisitante" class="col-lg-12" style="display: none; margin-top:10px;">
            <h4>Parientes del residente</h4>
            <div class="col-lg-6">
                <form class="form-inline">
                    <div class="col-lg-4" align="left">
                        <button type="button" class="btn btn-success" onclick="IrPariente()">Ir a parientes</button>
                    </div>
                    <div class="col-lg-8" align="right">
                        <div class="form-group">
                            <input type="text" class="form-control" id="Buscar" placeholder="Buscar">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-default" onclick="BuscarPariente()">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <div class="form-group" align="right">
                    <button type="button" class="btn btn-success" onclick="TerminarRegistroResidente()">Guardar</button>
                </div>
            </div>

            <div id="tblPariente" class="col-lg-6" style="margin-top:10px;">
                <h4>Listas de parientes</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombre completo</th>
                            <th scope="col">Parentesco</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1</th>
                            <td>101110111</td>
                            <td>Noelia Segura</td>
                            <td>
                                <select class="form-control" id="TipoTelefono">
                                    <option>Default</option>
                                </select>
                            </td>
                            <td>
                                <button type="button" class="btn btn-default" onclick="">Agregar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div id="tblPariente" class="col-lg-6" style="margin-top:10px;">
                <h4>Parientes del residente</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombre completo</th>
                            <th scope="col">Parentesco</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr></tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="MensajeAlerta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Atención</h5>
            </div>
            <div class="modal-body">
                <p id="MensajeModal"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Cargando" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body" align="center">
                <img src="~/Images/loading.gif" alt="Cargando" style="width:100px; height:100px;" />
                <p id="MensajeModal">Procesando...</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Eliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Atención</h5>
            </div>
            <div class="modal-body">
                <p>¿Esta seguro que quiere eliminar este registro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="Cancelar()">Cancelar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Eliminar()">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Funciones/Pacientes.js"></script>